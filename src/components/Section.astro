---
const { color, id, showFooterContent } = Astro.props;
import Footer from './Footer.astro';
---

<section
  class="landing-section bg-white h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative h-full flex flex-col">
    <body class="flex flex-col flex-grow justify-end pb-20">
      <slot name="body" />
      {showFooterContent && <Footer />}
    </body>
  </div>
</section>
